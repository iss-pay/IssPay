<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Purchase Form</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form class='purchase_form'>
          <div class="form-group">
            <label for="Drinks"> Drinks: </label>
            <select name="Drinks" class='drinks form-control'>
              <option value="null" data-price='0'>飲料</option>
              <% IssPay::Item.drinks.each do |drink| %>
                <% if drink.quantity > 0 %>
                  <option value="<%=drink.id%>" data-price='<%= drink.price %>'> <%= "#{drink.name}: $#{drink.price}" %></option>
                <% end %>                
              <% end %>
            </select>
          </div>
          <div class="form-group">
            <label for="Snacks"> Snacks: </label>
            <select name="Snacks" class='snacks form-control'>
              <option value="null" data-price='0'>零食</option>
              <% IssPay::Item.snacks.each do |snack| %>
                <% if snack.quantity > 0 %>
                  <option value="<%=snack.id%>" data-price='<%= snack.price %>'> <%= "#{snack.name}: $#{snack.price}" %></option>                
                <% end %>
              <% end %>
            </select>
          </div>
          <div>Amount: <span id="amount">0</span></div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary purchase" data-dismiss="modal">Purchase</button>
      </div>
    </div>
  </div>
</div>